{
    "manifest_version": 3,
    "name": "Tab Manager",
    "description": "Manage and Organize your browser tabs.",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": {
            "file": "background.js",
            "type": "module"
        }
    },
    "permissions": [
        "tabs",
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}